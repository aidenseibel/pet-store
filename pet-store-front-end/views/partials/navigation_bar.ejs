<!-- views/partials/navigation_bar.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/partials/navigation_bar_styles.css">

    </head>
    <body>
        <!-- Navigation Bar -->
        <div class="navigation_bar">
            <!-- Website Title - navigates the user back to listings.ejs - Left -->
            <span><a class="nav_bar_header" href="/listings" style="text-decoration: none; color: inherit;">
                <img class="logo" src="https://www.creativefabrica.com/wp-content/uploads/2023/04/06/Cute-Hamster-kawaii-clipart-Graphics-66428546-1.jpg" alt="logo">
                <h2 >hamsterstore</h2>
            </a></span>
            
            <!-- Search all listings search bar - Middle -->
            <form class="nav_bar_search_container">
                <input type="text" class="form_input" placeholder="Search all listings...">
            </form>

            <!-- Switch to Vendor Button - Right Side -->
            <span><a class="nav_bar_button" href="/vendor_dashboard" style="text-decoration: none; color: darkblue;">Switch to Vendor</a></span>
            
            <!-- User Cart Button - Right Side -->
            <span><a class="nav_bar_button" href="/user_cart">
                <img class="nav_bar_button_icon" src="/images/cart.png" alt="Cart">
            </a></span>

            <!-- User Profile Button - redirects to onboarding if user is not signed in - Farthest Right -->
            <span><a class="nav_bar_button" href="/profile">
                <img class="nav_bar_button_icon" src="/images/profile.png" alt="Profile">
            </a></span>
        </div>
    </body>
</html>