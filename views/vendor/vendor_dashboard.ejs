<!-- views/vendor/vendor_dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/vendor/vendor_styles.css">

        <title>Vendor Dashboard</title>
    </head>

    <body>
        <!-- Navigation Bar -->
        <%- include ('../partials/vendor_navigation_bar.ejs') %>

        <!-- Title -->
        <h2 style="margin-left: 2%;">All Open Orders (<%=openOrders.length %>)</h2>

        <!-- Main Container -->
        <div class="vendor_dashboard_view">

            <!-- All Orders - Left Side of Page -->
            <div class="vendor_current_orders_container">
                <%if(openOrders.length == 0){%>            
                    <body style="font-family: 'Poppins Light';">You do not have any open orders.</body>
                <%} else { 
                    openOrders.forEach(arr => {
                        const [order, product, user] = arr;
                        %>
                        <a href="/vendor_product_view?listingid=<%= product.id %>" style="text-decoration: none; color: inherit;"><%- include ('../partials/vendor_order_subview.ejs', { order, product, user }) %></a>
                <% });}%>
            </div>

            <!-- Vendor Summary - Right Side of Page -->
            <div class="vendor_summary_container">
                <h2>My Vendor Summary</h2>

                <!-- OPEN Orders Count -->
                <div class="information_row">
                    <p>Open Orders</p>
                    <p><%=openOrders.length %></p>
                </div>

                <!-- Products Count -->
                <div class="information_row">
                    <p>Products</p>
                    <p>3</p>
                </div>

                <!-- Total Order Count -->
                <div class="information_row">
                    <p>Total Orders</p>
                    <p><%=all_orders.length %></p>
                </div>

                <!-- Total Earnings Amount -->
                <div class="information_row">
                    <p>Total Earnings</p>
                    <p>$<%=total_earnings%></p>
                </div>
            </div>
        </div>
    </body>
</html>