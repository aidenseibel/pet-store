<!-- views/vendor/vendor_dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/vendor/vendor_styles.css">

        <title>Vendor Dashboard</title>
    </head>

    <body>
        <!-- Navigation Bar -->
        <%- include ('../partials/vendor_navigation_bar.ejs') %>

        <!-- Title -->
        <h2 style="margin-left: 2%;">All Open Orders (<%=profile.vendor_orders.length %>)</h2>

        <!-- Main Container -->
        <div class="vendor_dashboard_view">

            <!-- All Orders - Left Side of Page -->
            <div class="vendor_current_orders_container">
                <%if(profile.vendor_orders.length == 0){%>            
                    <h2 style="font-family: 'Poppins Light';">You do not have any open orders.</h2>
                <%} else { 
                    for (let i = 0; i < profile.vendor_orders.length; i++) { %>
                        <a href="/vendor_product_view" style="text-decoration: none; color: inherit;"><%- include ('../partials/vendor_order_subview.ejs') %></a>
                <% }}%>
            </div>

            <!-- Vendor Summary - Right Side of Page -->
            <div class="vendor_summary_container">
                <h2>My Vendor Summary</h2>

                <!-- OPEN Orders Count -->
                <div class="information_row">
                    <p>Open Orders</p>
                    <p><%=profile.vendor_orders.length %></p>
                </div>

                <!-- Products Count -->
                <div class="information_row">
                    <p>Products</p>
                    <p>3</p>
                </div>

                <!-- Earnings THIS MONTH -->
                <div class="information_row">
                    <div style="display: flex; flex-direction: row; gap: 5%;">
                        <p>Earnings</p>
                        <p style="font-family: 'Poppins Light'; opacity: 50%;">(August)</p>
                    </div>
                    <p>$153.99</p>
                </div>

                <!-- Order Count THIS MONTH -->
                <div class="information_row">
                    <div style="display: flex; flex-direction: row; gap: 5%;">
                        <p>Orders</p>
                        <p style="font-family: 'Poppins Light'; opacity: 50%;">(August)</p>
                    </div>
                    <p>17</p>
                </div>

                <!-- Total Order Count -->
                <div class="information_row">
                    <p>Total Orders</p>
                    <p>67</p>
                </div>

                <!-- Total Earnings Amount -->
                <div class="information_row">
                    <p>Total Earnings</p>
                    <p>$1,204.32</p>
                </div>

            </div>
        </div>
    </body>
</html>