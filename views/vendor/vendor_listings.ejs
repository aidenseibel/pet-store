<!-- views/vendor/vendor_listings.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/styles.css">
        <link rel="stylesheet" href="/styles/vendor/vendor_styles.css">

        <title>Vendor Product View</title>
    </head>
    
    <body>
         <!-- Navigation Bar -->
        <%- include ('../partials/vendor_navigation_bar.ejs') %>

        <!-- Content -->
        <h2 style="margin-left: 2%;"><%=profile.username %>'s Listings (<%=listings.length %>)</h2>

        <!-- Main Container -->
        <div class="all_listings">

            <!-- All listings -->
            <%if(listings.length == 0){%>            
                <h3 style="font-family: 'Poppins Light';">You do not have any listings!</h3>
            <%} else { 
                listings.forEach(listing => { %>
                    <a href="/user_product_view" style="width: 25%; text-decoration: none; color: inherit;">
                        <%- include ('../partials/listing_subview_square.ejs', { listing }) %>
                    </a>
            <%
            });}
            %>
        </div>
    </body>
</html>